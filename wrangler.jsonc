{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "ai-hypnosis",
  "compatibility_date": "2024-01-01",
  "pages_build_output_dir": "./dist",
  "compatibility_flags": ["nodejs_compat"],
  
  // D1 Database for session tracking and technique storage
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "hypnosis-db",
      // ID will be added after creating the database with: npx wrangler d1 create hypnosis-db
      "database_id": "YOUR_DATABASE_ID_HERE"
    }
  ],
  
  // KV Namespace for caching and quick access
  "kv_namespaces": [
    {
      "binding": "KV",
      "id": "YOUR_KV_ID_HERE",
      "preview_id": "YOUR_KV_PREVIEW_ID_HERE"
    }
  ],
  
  // Environment variables (stored securely with wrangler secret)
  // Use: npx wrangler pages secret put AI_API_KEY --project-name ai-hypnosis
  // Use: npx wrangler pages secret put OPENAI_API_KEY --project-name ai-hypnosis
}